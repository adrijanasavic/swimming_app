<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_blue"
        android:orientation="vertical">

        <TextView
            style="@style/InfoDescriptionTextStyle"
            android:layout_marginLeft="10dp"
            android:text="@string/kin_place"
            android:textColor="@android:color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gym"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:fontFamily="@font/nunito_sans_italic"
            android:text="@string/name_gym"
            android:textColor="@android:color/white"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:fontFamily="@font/nunito_sans_italic"
            android:text="Branka BajiÄ‡a 11 - Novi Sad"
            android:textColor="@android:color/white"
            android:textSize="22dp" />

        <TextView
            style="@style/InfoDescriptionTextStyle"
            android:layout_marginLeft="10dp"
            android:text="@string/working_hours"
            android:textColor="@android:color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:fontFamily="@font/nunito_sans_italic"
            android:text="@string/days"
            android:textColor="@android:color/white"
            android:textSize="22dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/nunito_sans_italic"
            android:text="09:00 - 12:00"
            android:textColor="@android:color/white"
            android:textSize="22dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:fontFamily="@font/nunito_sans_italic"
            android:text="@string/weekend"
            android:textColor="@android:color/white"
            android:textSize="22dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/nunito_sans_italic"
            android:text="11:00 - 15:00"
            android:textColor="@android:color/white"
            android:textSize="22dp" />

    </LinearLayout>

</ScrollView>