<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/InfoDescriptionTextStyle"
            android:layout_marginLeft="10dp"
            android:text="@string/contact"
            android:textColor="@android:color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/con1"
            android:layout_width="match_parent"
            android:layout_height="74dp">

            <ImageView
                android:id="@+id/ivMalaSlika1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/phone1" />

            <TextView
                android:id="@+id/tvIme1"
                style="@style/InfoDescriptionTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/ivMalaSlika1"
                android:layout_toRightOf="@id/ivMalaSlika1"
                android:fontFamily="@font/nunito_sans_italic"
                android:text="0641494033"
                android:textColor="@android:color/white"
                android:textSize="22dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/con2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivMalaSlika2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:foregroundGravity="center"
                android:src="@drawable/mail1" />

            <TextView
                android:id="@+id/tvIme2"
                style="@style/InfoDescriptionTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="-2dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/ivMalaSlika2"
                android:layout_toRightOf="@id/ivMalaSlika2"
                android:fontFamily="@font/nunito_sans_italic"
                android:text="casoviplivanja@gmail.com"
                android:textColor="@android:color/white"
                android:textSize="22dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/des1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivMalaSlika3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/tvIme3"
                style="@style/InfoDescriptionTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/ivMalaSlika3"
                android:layout_toRightOf="@id/ivMalaSlika3"
                android:fontFamily="nun"
                android:text="21000 Novi Sad - Srbija"
                android:textColor="@android:color/white"
                android:textSize="22dp" />

        </RelativeLayout>


    </LinearLayout>

</ScrollView>